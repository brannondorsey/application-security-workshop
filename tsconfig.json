{
  "compilerOptions": {
      "allowUnreachableCode": false,
      "alwaysStrict": true,
      "declaration": false,
      "diagnostics": false,
      "lib": [
          "ES2020"
      ],
      "module": "commonjs",
      "target": "ES2020",
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": false,
      "noImplicitReturns": false,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "preserveConstEnums": true,
      "pretty": true,
      "sourceMap": true,
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "rootDir": "./"
  },
  "include": [
      "**/*",
      "test/**/*",
  ],
  "exclude": [
      "dist",
      "node_modules"
  ]
}
